@using System.Web.Configuration
@using Microsoft.AspNet.Identity
@model SofthemeClassBooking.Models.EventViewModel

@section stylesDeclarationInHeader {
    @Styles.Render("~/bundles/styles/plan")
    @Styles.Render("~/bundles/styles/event")
}

@{
    var showEventOwner = Model.Event.IsAuthorShown ? Model.Author : Model.Event.Organizer;
    var participantCount = Model.Participants.Count();
    var eventDescription = Model.Event.Description == null ? Localization.ErrorNoDescription : Model.Event.Description;
    var editAccess = (User.Identity.GetUserId() == Model.Event.UserId) ||
                     (User.IsInRole(WebConfigurationManager.AppSettings["UserRoleAdmin"]));
}

@section scriptDeclarationInHeader
{
    @Scripts.Render("~/bundles/scripts/calendar")
}

<div class="eventpage">
    <div class="eventpage-info">

        <div class="title">@Model.Event.Title</div>

        <div class="author noselect-text">
            <i class="fa fa-user"></i>
            <div class="event-creator-name">
                @showEventOwner
            </div>
        </div>

        <div class="description">
            <span>@eventDescription</span>
        </div>


        @if (@Model.Event.IsParticipantsAllowed)
        {

            <div class="participant-add">

                @if (DateTime.Compare(@Model.Event.EndingDate, DateTime.Now) > 0)
                {
                    <div class="text">@Localization.EventPlanningTakePart<span id="participant-count">@participantCount</span> @Localization.People</div>
                    if (Model.Event.UserId == User.Identity.GetUserId())
                    {
                        <input id="Email" name="Email" type="text" placeholder="@Localization.ErrorEventAlreadyEnrolledPlaceholder" disabled />
                    }
                    else
                    {
                        <span>@Localization.EventParticipantJoin</span>
                        using (Html.BeginForm("Add", "Participant", FormMethod.Post, new { id = "add-participant-form" }))
                        {
                            <input id="add-participant-email" name="Email" type="text" placeholder="@Localization.EventParticipantJoinPlaceholder" required />
                            <i id="add-participant-submit" class="fa fa-plus fa-lg"></i>
                            <input type="hidden" name="EventId" value="@Model.Event.Id" />
                        }

                    }
                }
                else
                {
                    <div class="text">@Localization.EventParticipantsTookPart <span id="participant-count">@Model.ParticipantCount</span> @Localization.People</div>
                    <input type="text" placeholder="@Localization.ErrorEventPassedPlaceholder" disabled />
                }

            </div>
        }


    </div>

    <div class="eventpage-calendar-section noselect-text">

        <div class="eventpage-calendar">
            <div class="eventpage-calendar-header">

                <div class="datetime">
                    <i class="fa fa-calendar" aria-hidden="true"></i>
                    <div class="event-time-simple">
                        <div id="event-begin-date" class="text"></div>
                    </div>
                </div>


                <div class="datetime">
                    <i class="fa fa-clock-o" aria-hidden="true"></i>
                    <div class="event-time-simple">
                        <div class="text"><span id="event-begin-time"></span>&nbsp;-&nbsp;<span id="event-end-time"></span></div>
                    </div>

                </div>
            </div>

            <div class="icon-section">
                <div class="icon-position">
                    <i class="fa fa-calendar-plus-o"></i>
                    <i class="fa fa-envelope-o"></i>
                    <i class="fa fa-print"></i>
                </div>
            </div>

            @if (editAccess)
            {
                <div class="button-section">
                    <button id="change-cancel" class="cancel">Отмена</button>
                    <button id="save-cancel-event" class="save">Сохранить</button>
                </div>

                <div class="error-section">
                    <div class="icon">
                        <i class="fa fa-frown-o"></i>
                    </div>

                    <div class="message">
                        <span id="error-mesage"></span>
                    </div>
                </div>
            }
        </div>

    </div>

    @if (editAccess)
    {
        <div class="participant-list">
            <div class="header">Зарегистрирование участники:</div>

            <div class="participant-section">

                @foreach (var participant in Model.Participants)
                {
                    <div id="participant-@participant.Id" class="participant">
                        <div class="circle"></div>
                        <div class="email">@participant.Email</div>
                        <i id="participant-@participant.Id-remove" class="fa fa-times" aria-hidden="true"></i>
                    </div>
                }

            </div>
        </div>
    }



    <div id="plan-section" class="plan-section plan-section-event">
        <div id="plan-loading">
            <div class="plan-loading-section">
                <div>@Localization.LoadingPlanSection...</div>
                <div>
                    <img src="~/Content/images/gif/ajax-loader.gif" />
                </div>
            </div>
        </div>
    </div>


    <div class="eventpage-navigation">
        <div id="schedule-selected-room" class="eventpage-schedule-box">

            <div class="block">

                <div>
                    <div class="block-element dark"></div>
                    <div class="block-element dark"></div>
                </div>
                <div>
                    <div class="block-element dark"></div>
                    <div class="block-element light"></div>
                </div>

            </div>

            <div class="text">
                <div>@Localization.EventRoomSchedule</div>
                <div id="eventpage-room-name" class="second-line"></div>
            </div>

        </div>

        <div id="schedule-all-rooms" class="eventpage-schedule-box">

            <div class="block">

                <div>
                    <div class="block-element light"></div>
                    <div class="block-element light"></div>
                </div>
                <div>
                    <div class="block-element light"></div>
                    <div class="block-element light"></div>
                </div>

            </div>

            <div class="text">
                <div>@Localization.Schedule</div>
                <div class="second-line">всех аудиторий</div>
            </div>

        </div>

    </div>
</div>
<div id="map-section">
    <div id="map-loading">
        <div class="plan-loading-section">
            <div>@Localization.LoadingMapSection...</div>
            <div>
                <img src="~/Content/images/gif/ajax-loader.gif" />
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    (function ($, window, document) {

        $(function () {

            //datetime format dd.MM.yyyy HH:mm:SS
            var eventDateTimeBegin = convertToDateObject('@Model.Event.BeginingDate', dateFormats.CShartDateTime);
            var eventDateTimeEnd = convertToDateObject('@Model.Event.EndingDate', dateFormats.CShartDateTime);

            $('#event-begin-date').html(eventDateTimeBegin.day + '.' + eventDateTimeBegin.month + '.' + String(eventDateTimeBegin.year).slice(-2));
            $('#event-begin-time').html(renderTimeMinutes(eventDateTimeBegin.hour, eventDateTimeBegin.minutes));
            $('#event-end-time').html(renderTimeMinutes(eventDateTimeEnd.hour, eventDateTimeEnd.minutes));

            loadSection('@Url.Action("Index","Classroom", new {id = Model.Event.ClassRoomId})', beforeSendHandler(planLoadingDiv), function (result) {
                $('#plan-section').html(result);
                $('#plan-room-path').addClass('plan-room-path-@Model.Event.ClassRoomId');
                $('#eventpage-room-name').html($('#eventpage-selected-room').val());
            });

            $('#schedule-all-rooms').click(function () {
                window.location = '@Url.Action("Index","Home")';
            });

            $('#schedule-all-rooms').click(function () {
                window.location = '@Url.Action("Index","Home")';
            });

            $('#schedule-selected-room').click(function () {
                window.location = '@Url.Action("RoomPage","Classroom", new {id = Model.Event.ClassRoomId})';
            });


            renderMapSection();

        });

        // The rest of the code goes here!
    }(window.jQuery, window, document));

</script>

@section scriptDeclarationAfterFooter {
    @Scripts.Render("~/bundles/scripts/jqueryval")
    @Scripts.Render("~/bundles/scripts/map")
}
