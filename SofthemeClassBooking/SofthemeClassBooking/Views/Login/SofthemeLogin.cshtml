@using SofthemeClassBooking.Models
@model LoginViewModel
@{
    Layout = "~/Views/Shared/_LayoutAuthorization.cshtml";
}


    <div> 
        <div class="wrapper">
            <div class="parallelogram">
                <div class="inner-inner-parallelogram">
                </div>

                <div class="inner-parallelogram">
                    <p id="title"> Вход </p>

                    <div class="inner-inner-parallelogram2">
                    </div>

                </div>

                <div class="form">


                @Html.Partial("Enter");

                </div>
            </div>
            <div class="logo">
                <img width="162px" src="~/Content/Image/logo.png"> </img>
                <br>
                <br>
                <!-- 552 596 -->
                <hr id="hr-style">
                <br>
              <p>
                <a id="Enter" style="cursor:pointer" class="select"><strong>Вход</strong></a>
              </p>
                <p> <a style="cursor:pointer" id="Registration" class="notselect"><strong>Регистрация</strong></a></p>
                <p><strong><a style="cursor:pointer"  id="ChangePassword" class="notselect">Смена пароля</a></strong></p>
              
                
            </div>
        </div>
    </div>
    <script>
        $(function () {
            $("#Enter").on('click', function () {
                $.get('@Url.Action("Enter")').done(function (result) {
                    $('form').html(result);
                    if ($('#Enter').hasClass('notselect'))
                    {
                        $('#Enter').removeClass('notselect')
                        $('#Enter').addClass('select');
                    }
                    
                    if ($('#Registration').hasClass('select'))
                    {
                        $('#Registration').removeClass('select');
                        $('#Registration').addClass('notselect');
                    }
                    if ($('#ChangePassword').hasClass('select')) {
                        $('#ChangePassword').removeClass('select');
                        $('#ChangePassword').addClass('notselect');
                    }
                    $("#title").text("Вход");
                });

            });
        })
        $(function () {
            $("#Registration").on('click', function () {
                $.get('@Url.Action("Registration")').done(function (result) {
                    $('form').html(result);
                    if ($('#Registration').hasClass('notselect'))
                    {
                        $('#Registration').removeClass('notselect')
                        $('#Registration').addClass('select');
                    }
                    if ($('#Enter').hasClass('select')) {
                        $('#Enter').removeClass('select');
                        $('#Enter').addClass('notselect');
                    }
                    if ($('#ChangePassword').hasClass('select')) {
                        $('#ChangePassword').removeClass('select');
                        $('#ChangePassword').addClass('notselect');
                    }
                    $("#title").text("Регистрация");
                  
                });

            });
        })
        $(function () {
            $("#ChangePassword").on('click', function () {
                $.get('@Url.Action("ChangePassword")').done(function (result) {
                    $('form').html(result);
                    if ($('#ChangePassword').hasClass('notselect')) {
                        $('#ChangePassword').removeClass('notselect')
                        $('#ChangePassword').addClass('select');
                    }
                    if ($('#Enter').hasClass('select')) {
                        $('#Enter').removeClass('select');
                        $('#Enter').addClass('notselect');
                    }
                    if ($('#Registration').hasClass('select')) {
                        $('#Registration').removeClass('select');
                        $('#Registration').addClass('notselect');
                    }
                    $("#title").text("Смена пароля");

                });

            });
        })
    </script>

